CREATE TABLE Weapon_info
(
  ID INT NOT NULL,
  Name VARHAR(20) NOT NULL,
  Type VARCHAR(20) NOT NULL,
  Rarity INT NOT NULL,
  Main_characteristic VARCHAR(20) NOT NULL,
  Main_value INT NOT NULL,
  Level INT NOT NULL,
  PRIMARY KEY (ID)
);
