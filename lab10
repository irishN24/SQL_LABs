CREATE TABLE Location(
  ID INT,
  Name_region VARCHAR(100) NOT NULL,
  Region VARCHAR(100) NOT NULL,
  constraint LOCATION_ID_pk primary key (id)
  --CONSTRAINT location_name_region_uk UNIQUE(name_region)
);
